{
    "name": "@jutge.org/api-clients",
    "version": "0.1.3",
    "description": "Jutge.org API client generator",
    "keywords": [
        "jutge.org",
        "client",
        "generator"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jutge-org/cli.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "homepage": "https://api.jutge.org/clients",
    "type": "module",
    "module": "./src/index.ts",
    "bin": {
        "jutge-api-client": "./bin/jutge-api-client"
    },
    "files": [
        "./dist",
        "package.json"
    ],
    "devDependencies": {
        "@types/bun": "^1.2.3"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@commander-js/extra-typings": "^12.1.0",
        "commander": "^12.1.0",
        "@eslint/eslintrc": "^3.3.0",
        "@eslint/js": "^9.22.0",
        "@sinclair/typebox": "^0.34.27",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "chalk": "^5.4.1",
        "prettier": "^3.5.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "radash": "^12.1.0"
    },
    "scripts": {
        "build": "bun build ./src/index.ts --format esm --target node --banner '#!/usr/bin/env node' --outfile bin/jutge-api-client",
        "gen": "bun run src/index.ts",
        "clean": "(rm out/*)",
        "lint": "eslint src",
        "format": "bun prettier src --write",
        "test-python": "(cd src/tests/python && pytest)",
        "test-typescript": "(cd src/tests/typescript && bun test)",
        "test-java": "(cd src/tests/java && make && make test)",
        "test-cpp": "(cd src/tests/cpp && make && make test)",
        "test-javascript": "(cd src/tests/javascript && bun test)",
        "test-php": "(cd src/tests/php && make test)",
        "test-all": "bun test-python ; bun test-typescript ; bun test-cpp ; bun test-javascript ; bun test-php; bun test-java"
    },
    "prettier": {
        "plugins": [
            "prettier-plugin-organize-imports"
        ],
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false,
        "useTabs": false,
        "arrowParens": "always",
        "printWidth": 120
    }
}
